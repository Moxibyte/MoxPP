root = true

# Global default
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 4

# Windows local files
[*.{sln,csproj,vcxproj,vcxproj.filters,props,targets,cmd,bat}]
end_of_line = crlf

# Makefile require attention
[Makefile]
indent_style = tab
end_of_line = lf

# Allow yml to be more packed
[/.github/**.yml]
indent_style = space
indent_size = 2
